/* Global
---------------------------- */

body {
  background-attachment: fixed;
  background-size: 300px 300px;
}

#logo {
  margin-top: 0;

  a {
    img {
      max-width: 140px;
    }
  }
}

#content {
  padding-top: 3.125rem;
}

ul#cart {
  .preheader-icon {
    margin-right: 3px;
    width: 32px;
    height: 32px;
    vertical-align: middle;
  }

  .preheader-text {
    font-size: 0.875rem;
    text-transform: uppercase;
  }
}

/* Typography
---------------------------- */

h1,
#page h1 {
  margin-bottom: 2rem;
}

h2, h3 {
  margin-bottom: 1.5rem;
}

h4, h5, h6 {
  margin-bottom: 1rem;
}

p {
  margin-bottom: 1rem;

  + h1,
  + h2,
  + h3 {
    margin-top: 2rem;
  }
}

/* Homepage
---------------------------- */
.homepage-section {
  padding-bottom: 2rem;
}

.flexslider {
  .slides {
    .slideshow-fixed-bg {
      img {
        margin: 0 auto;
        max-height: 500px;
        width: auto;
      }
    }
  }
}

.collection-info {
  h3 {
    font-size: 1rem;
  }
}

.collection-info-bottom {
  text-align: center;
  position: relative;
  margin-top: 0;
  background: none;
}

/* Products
---------------------------- */
#collection-description {
  padding-bottom: 2rem;
}

.prod-property {
  margin-left: auto;
  margin-right: auto;
}

.prod-disabled {
  opacity: 0.5;
}

input.error, select.error, textarea.error {
  border-color: red;
  color: red;
}

/* Cart
---------------------------- */

.cart-title {
  vertical-align: middle;
}

.cart-line-item {
  display: block;
  font-size: 0.875rem;
  font-style: italic;
}

#looked-at {
  margin-top: 2rem;
}

/* Media Queries
---------------------------- */

/* Mobile only */
@media screen and(max-width: 46.25rem) {
  ul#cart {
    .preheader-text {
      display: none;
    }
  }

  nav {
    border: 0;
  }

  #cartform select {
    width: 100%;
  }

  .cart-price del {
    display: none;
  }

  .flexslider {
    .slides {
      .slideshow-fixed-bg {
        .row {
          width: 100%;
          > div {
            margin: 0;
            width: 100%;
          }
        }
      }
    }
  }
}

/* Tablet and above */
@media screen and(min-width: 33.9rem) {
  #logo {
    a {
      img {
        max-width: 200px;
      }
    }
  }
}

