/* Global
---------------------------- */

body {
  background-attachment: fixed;
  background-size: 300px 300px;
}

#logo {
  margin-top: 0;

  a {
    img {
      max-width: 140px;
    }
  }
}

#content {
  padding-top: 3.125rem;
}

/* Typography
---------------------------- */

h1,
#page h1 {
  margin-bottom: 2rem;
}

h2, h3 {
  margin-bottom: 1.5rem;
}

h4, h5, h6 {
  margin-bottom: 1rem;
}

p {
  margin-bottom: 1rem;

  + h1,
  + h2,
  + h3 {
    margin-top: 2rem;
  }
}

/* Homepage
---------------------------- */
.homepage-section{
  padding-bottom: 2rem;
}

/* Products
---------------------------- */
#collection-description {
  padding-bottom: 2rem;
}

.prod-property {
  margin-left: auto;
  margin-right: auto;
}

.prod-disabled {
  opacity: 0.5;
}

input.error, select.error, textarea.error {
  border-color: red;
  color: red;
}

/* Cart
---------------------------- */

.cart-title {
  vertical-align: middle;
}

.cart-line-item {
  display: block;
  font-size: 0.875rem;
  font-style: italic;
}

#looked-at {
  margin-top: 2rem;
}

/* Media Queries
---------------------------- */

/* Mobile only */
@media screen and(max-width: 46.25rem) {
  nav {
    border: 0;
  }

  #cartform select {
    width: 100%;
  }

  .cart-price del {
    display: none;
  }
}

/* Tablet and above */
@media screen and(min-width: 33.9rem) {
  #logo {
    a {
      img {
        max-width: 200px;
      }
    }
  }
}

/* Desktop */
@media screen and(min-width: 61.25rem) {
  #logo {
    margin-top: -1rem;
  }
}
